<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{% trans %}Bonjour !{% endtrans %}
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="https://kit.fontawesome.com/7a86044dd0.js" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		{# Feuille de styles #}
		{% block stylesheets %}

			{{ encore_entry_link_tags('app') }}

		{# <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}"> #}
			{# <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}"> #}

		{% endblock %}


		{# Fichiers JS #}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ encore_entry_script_tags('swaldelete') }}

			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
			<script src="sweetalert2.all.min.js"></script>


			{# <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" defer></script> #}
			{# <script src="{{ asset('assets/js/scripts.js') }}" defer></script> #}

		{% endblock %}
	</head>

	<body>
		{% include "_partials/_nav.html.twig" %}

		{# Message alert  #}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
					{% if label == 'success' %}
						<i class="fa-solid fa-check"></i>
					{% endif %}
					<strong>{{ label |trans }}</strong>
					{{ message |trans }}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>

				{# Mise de la variable twig dans une data  #}
				<div id="message-extract" class="message-extract" data-message-extract="{{message|trans}}"></div>
			{% endfor %}

		{% endfor %}

		<script>
			{# Passage de la variable twig à JS #}
var message = document.getElementById('message-extract').getAttribute('data-message-extract')

Swal.fire({icon: 'success', title: message, showConfirmButton: false, timer: 1650});
		</script>

		{% block body %}{% endblock %}

		{% include "_partials/_footer.html.twig" %}

	</body>

</html>
