{% extends 'base.html.twig' %}

{% block title %}Ticket
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>Ticket</h1>
					<div class="card-body text-center">
						<table class="table table-dark table-hover">
							<tbody>
								<tr>
									<th>Année</th>
									<td>{{ ticket.annee }}</td>
								</tr>
								<tr>
									<th>Numéro Ticket</th>
									<td>{{ ticket.numeroTicket }}</td>
								</tr>
								<tr>
									<th>Date de Vente</th>
									<td>{{ ticket.dateVente ? ticket.dateVente|format_datetime('full', 'short', locale='fr')|upper }}</td>
								</tr>
							</tbody>
						</table>

						<a class="btn btn-warning" role="button" href="{{ path('app_ticket_index') }}">Retour à la liste</a>

						<a class="btn btn-info" role="button" href="{{ path('app_ticket_edit', {'annee': ticket.annee}) }}">Modifier</a>

						{{ include('ticket/_delete_form.html.twig') }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
