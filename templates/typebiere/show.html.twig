{% extends 'base.html.twig' %}

{% block title %}{% trans %}Type de bière{% endtrans %}{% endblock %}

{% block body %}
	<div class="container d-flex flex-column min-vh-100">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>{% trans %}Type de bière{% endtrans %}</h1>
					<div class="card-body text-center">
						<table class="table table-dark table-hover">
        <tbody>
            <tr>
                <th>{% trans %}Code{% endtrans %}</th>
                <td>{{ typebiere.idType }}</td>
            </tr>
            <tr>
                <th>{% trans %}Nom Type de bière{% endtrans %}</th>
                <td>{{ typebiere.nomType }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" role="button" href="{{ path('app_typebiere_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>

    <a class="btn btn-info m-3" role="button" href="{{ path('app_typebiere_edit', {'idType': typebiere.idType}) }}">{% trans %}Modifier{% endtrans %}</a>

    {{ include('typebiere/_delete_form.html.twig') }}

    					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
