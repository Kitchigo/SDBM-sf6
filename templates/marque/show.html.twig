{% extends 'base.html.twig' %}

{% block title %}{% trans %}Marque{% endtrans %}
{% endblock %}

{% block body %}
	<div class="container d-flex flex-column min-vh-100">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>{% trans %}Marque{% endtrans %}</h1>
					<div class="card-body text-center">
						<table class="table table-dark table-hover">
							<tbody>
								<tr>
									<th>{% trans %}Code Marque{% endtrans %}</th>
									<td>{{ marque.idMarque }}</td>
								</tr>
								<tr>
									<th>{% trans %}Nom Marque{% endtrans %}</th>
									<td>{{ marque.nomMarque }}</td>
								</tr>
							</tbody>
						</table>

						<a class="btn btn-warning" role="button" href="{{ path('app_marque_index') }}">{% trans %}Retour Ã  la liste{% endtrans %}</a>

						<a class="btn btn-info m-3" role="button" href="{{ path('app_marque_edit', {'idMarque': marque.idMarque}) }}">{% trans %}Modifier{% endtrans %}</a>

						{{ include('marque/_delete_form.html.twig') }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
