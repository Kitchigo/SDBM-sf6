{% extends 'base.html.twig' %}

{% block title %}Marque index
{% endblock %}

{% block body %}
	<div class="container">

		<div class="justify-content-center">
			<div class="card bg-dark border rounded-pill border-4 m-4">
				<div class="card-title text-center text-white">
					<h1>Liste des Marques</h1>
				</div>
				<div class="card-body text-center">
					<a class="btn btn-primary" href="{{ path('app_marque_new') }}">
						<i class="fa-solid fa-plus"></i>AJOUTER</a>
				</div>
			</div>
		</div>


		<div class="table-responsive">
			<table class="table table-dark table-hover">
				<thead>
					<tr>
						<th>Code</th>
						<th>Marque</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for marque in marques %}
						<tr>
							<td>{{ marque.idMarque }}</td>
							<td>{{ marque.nomMarque }}</td>
							<td>
								<a class="btn btn-primary" role="button" href="{{ path('app_marque_show', {'idMarque': marque.idMarque}) }}">
									<i class="fa-solid fa-eye"></i>
								</a>
								<a class="btn btn-info" role="button" href="{{ path('app_marque_edit', {'idMarque': marque.idMarque}) }}">
									<i class="fa-solid fa-pencil"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}
