{% extends 'base.html.twig' %}

{% block title %}{% trans %}Modification du Continent{% endtrans %}
{% endblock %}


{% block body %}
	<div class="container d-flex flex-column min-vh-100 d-flex flex-column min-vh-100">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>{% trans %}Modification du Continent{% endtrans %}</h1>
				</div>
				<div class="card-body text-center">

					{{ include('continent/_form.html.twig', {'button_label': 'Mettre à jour'|trans}) }}

					<a class="btn btn-warning m-3" role="button" href="{{ path('app_continent_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>

					{{ include('continent/_delete_form.html.twig') }}
				</div>

			</div>

		</div>
	</div>
{% endblock %}
