{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>Article</h1>
					<div class="card-body text-center">
						<table class="table table-dark table-hover">
							<tbody>
								<tr>
									<th>Code Article</th>
									<td>{{ article.idArticle }}</td>
								</tr>
								<tr>
									<th>Nom Article</th>
									<td>{{ article.nomArticle }}</td>
								</tr>
								<tr>
									<th>Prix Achat</th>
									<td>{{ article.prixAchat }}</td>
								</tr>
								<tr>
									<th>Volume</th>
									<td>{{ article.volume }}</td>
								</tr>
								<tr>
									<th>Titrage</th>
									<td>{{ article.titrage }}</td>
								</tr>
								<tr>
									<th>Marque</th>
									<td>{{ article.idMarque.nomMarque  }}</td>
								</tr>
								<tr>
									<th>Couleur</th>
									{% if article.idCouleur == null %}
										<td></td>
									{% else %}
										<td>{{ article.idCouleur.nomCouleur }}</td>
									{% endif %}
								</tr>
								<tr>
									<th>Type de bière</th>
									{% if article.idType == null %}
										<td></td>
									{% else %}
										<td>{{ article.idType.nomType }}</td>
									{% endif %}
								</tr>
							</tbody>
						</table>

						<a class="btn btn-warning" role="button"  href="{{ path('app_article_index') }}">Retour à la liste</a>

						<a class="btn btn-info" role="button" href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}">Modifier</a>

						{{ include('article/_delete_form.html.twig') }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
