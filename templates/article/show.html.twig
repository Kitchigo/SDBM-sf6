{% extends 'base.html.twig' %}

{% block title %}Article{% trans %}{% endtrans %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center m-5">

			<div class="card bg-dark border rounded-5 border mt-4 col-md-8 justify-center content-center">
				<div class="card-title text-center text-white">
					<h1>{% trans %}Article{% endtrans %}</h1>
					<div class="card-body text-center">
						<table class="table table-dark table-hover">
							<tbody>
								<tr>
									<th>{% trans %}Code Article{% endtrans %}</th>
									<td>{{ article.idArticle }}</td>
								</tr>
								<tr>
									<th>{% trans %}Nom Article{% endtrans %}</th>
									<td>{{ article.nomArticle }}</td>
								</tr>
								<tr>
									<th>{% trans %}Prix Achat{% endtrans %}</th>
									<td>{{ article.prixAchat }}</td>
								</tr>
								<tr>
									<th>{% trans %}Volume{% endtrans %}</th>
									<td>{{ article.volume }}</td>
								</tr>
								<tr>
									<th>{% trans %}Titrage{% endtrans %}</th>
									<td>{{ article.titrage }}</td>
								</tr>
								<tr>
									<th>{% trans %}Marque{% endtrans %}</th>
									<td>{{ article.idMarque.nomMarque  }}</td>
								</tr>
								<tr>
									<th>{% trans %}Couleur{% endtrans %}</th>
									{% if article.idCouleur == null %}
										<td></td>
									{% else %}
										<td>{{ article.idCouleur.nomCouleur }}</td>
									{% endif %}
								</tr>
								<tr>
									<th>{% trans %}Type de bière{% endtrans %}</th>
									{% if article.idType == null %}
										<td></td>
									{% else %}
										<td>{{ article.idType.nomType }}</td>
									{% endif %}
								</tr>
							</tbody>
						</table>

						<a class="btn btn-warning" role="button"  href="{{ path('app_article_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>

						<a class="btn btn-info" role="button" href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}">{% trans %}Modifier{% endtrans %}</a>

						{{ include('article/_delete_form.html.twig') }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
